{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "airbnb",
        "plugin:cypress/recommended",
        "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": 13,
        "sourceType": "module"
    },
    "plugins": ["prettier"],
    "rules": {
        "import/prefer-default-export": "off",
        "import/extensions": ["off"],
        "class-methods-use-this": "off",
        "prettier/prettier": [
            "error",
            {
                "singleQuote": false,
                "semi": true,
                "useTabs": false,
                "tabWidth": 4,
                "trailingComma": "all",
                "printWidth": 80,
                "bracketSpacing": true,
                "arrowParens": "avoid",
                "endOfLine": "auto"
            }
        ]
    }
}
